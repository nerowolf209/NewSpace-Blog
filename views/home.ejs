

<%- include("header") -%>

<div class="box" id="heading">
    <h1>Welcome to the home page</h1>
    <p>Please click on create at the top of the page to start creating your blog</p>
</div>


        <% titlePost.forEach(function(titlePost) { %>
            <div class="box">
                <div class="item">
                <ul>
                    <h2><%= titlePost.title %>:</h2>
                    <div class="blogPostReview">
                        <p class="truncated"><%= titlePost.blogText %> </p>
                        <a href="/viewBlog/<%= encodeURIComponent(titlePost.title) %>">read more</a>
                    </div>
                </ul>
            </div>
            </div>
        <% }); %>




